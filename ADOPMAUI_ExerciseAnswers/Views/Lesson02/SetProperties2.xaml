<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADOPMAUI_Exercise.Views.Lesson02.SetProperties2"
             Title="SetProperties2">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <BoxView x:Name="lblColorBox" HeightRequest="200"></BoxView>
        <Button Text="Change Color" Clicked="Button_Clicked"></Button>

            <StackLayout Orientation="Horizontal">
                <StackLayout Orientation="Vertical">
                    <Label Text="Attribute Syntax" />
                    <Label>
                        <Label.Text>
                            Element Syntax
                        </Label.Text>
                    </Label>
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <Button Clicked="Button_Clicked_1" Text="Button1" FontSize="20"/>
                    <Button Clicked="Button_Clicked_2">
                        <Button.Text>Button2</Button.Text>
                        <Button.FontSize>10</Button.FontSize>
                    </Button>
                </StackLayout>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>